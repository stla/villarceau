                     , villarceau
  default-language:    Haskell2010

executable hopftorus4
  if flag(exe)
    buildable: True
  else
    buildable: False
  hs-source-dirs:      src-exe
  main-is:             ExeHopfTorus4.hs
  ghc-options:         -fllvm -main-is ExeHopfTorus4
  build-depends:       base >= 4.7 && < 5
                     , villarceau
  default-language:    Haskell2010

